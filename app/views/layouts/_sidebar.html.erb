            <div class="accordion-body p-0 ms-5">
              <%= link_to products_path, class:"nav-link link-dark text-danger" do %>
                Category 3
              <% end %>
            </div>
          </div>
          
        </div>



      </li>
      <li>
        <%= link_to cart_path(@current_cart), class:"nav-link link-dark" do %>
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
