        Show cart
        <% end %>
      </li>
      <% if @current_cart.line_items.any? %>
        <li>
          <%= link_to new_order_path, class:"nav-link link-dark text-danger" do %>
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
          <i class="fas fa-credit-card text-danger me-2"></i>
          Pay products
          <% end %>
