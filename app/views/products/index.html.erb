<p id="notice"><%= notice %></p>
<div class="container d-flex">
  <div class="row">
      <% @products.each do |product| %>
    <div class="col-12 col-md-5 col-lg-3 border-top border-start border-muted rounded p-2 m-2">
          <div class="">
            <%= link_to product, alt:"",class:"" do %>
              <%= image_tag 'plantines_test.jpeg', class:"card-img-top" %>
            <% end %>
            <div class="card-body">
              <%= link_to product do %>
                <h5 class="card-title">
                  <%= product.name %>
                </h5>
              <% end %>
              <div class="border-top border-muted">
                <span class="rated"><%= "Category" %></span>
              </div>
              <p class="card-text border-top border-muted">
                <%= "This should be the description for every product, telling the client how good it will be for them bying this unique piece" %>
              </p>

              <% if @render_admin_options %>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>

              <div class="bottom-wrapper">
                <div class="title">
                  <%= number_to_currency(product.price_cents) %>
                </div>
                <div class="d-flex my-2">
                  <%= link_to line_items_path(:product_id => product.id),method: :post,class:"title", data: {"-abc": "true" } do %>
                    <i class="fs-5 fas fa-cart-plus"></i>
                    <span class="ms-2">Add to cart</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
    </div>
      <% end %>
  </div>
</div>

<br>
