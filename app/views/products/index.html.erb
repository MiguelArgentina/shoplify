<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Stripe Product ID</th>
      <th>Stripe Price ID</th>
      <th>Payment</th>
      <th>Sales count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product %></td>
        <td><%= number_to_currency(product.price/100) %></td>
        <td><%= product.stripe_product_id %></td>
        <td><%= product.stripe_price_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= button_to 'Buy now!', checkout_index_path, method: :post, params: {id: product.id}, remote: true %></td>
        <td><%= product.sales_count %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

